{
  "name": "@overtheairbrew/backend",
  "version": "0.3.5",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "MIGRATE=true nest start --watch",
    "start:dev:mysql": "DATABASE_TYPE=mysql MYSQL_HOST=127.0.0.1 MYSQL_DATABASE=test MYSQL_USERNAME=root MIGRATE=true nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:debug:mysql": "DATABASE_TYPE=mysql MYSQL_HOST=127.0.0.1 MYSQL_DATABASE=test MYSQL_USERNAME=root MIGRATE=true nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --runInBand --config ./test/jest-e2e.json",
    "test:e2e:cov": "jest --runInBand --config ./test/jest-e2e.json --coverage",
    "test:e2e:mysql": "DATABASE_TYPE=mysql MYSQL_HOST=127.0.0.1 MYSQL_DATABASE=test MYSQL_USERNAME=root MIGRATE=true jest --runInBand --config ./test/jest-e2e.json",
    "generate-openapi-doc": "nest start --entryFile=./generate-openapi-docs.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.3.8",
    "@nestjs/platform-ws": "^10.3.8",
    "@nestjs/swagger": "^8.0.0",
    "@nestjs/websockets": "^10.3.8",
    "@otabp/local-device": "workspace:*",
    "@overtheairbrew/models": "workspace:*",
    "@overtheairbrew/nestjs-plugin-module": "workspace:*",
    "@overtheairbrew/plugins": "workspace:*",
    "@overtheairbrew/socket-events": "workspace:*",
    "@wahyubucil/nestjs-zod-openapi": "^0.1.2",
    "generate-api-key": "^1.0.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.11.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "sequelize": "^6.35.2",
    "sequelize-typescript": "^2.1.6",
    "socket.io": "^4.7.5",
    "sqlite3": "^5.1.6",
    "umzug": "^3.4.0",
    "zod": "^3.23.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.3.8",
    "@overtheairbrew/tsconfig": "workspace:*",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "src/data/migrations",
      "src/controllers",
      "src/auth",
      "src/data",
      "src/events/events.gateway.ts",
      "src/events/events.module.ts",
      "src/app.module.ts",
      "src/global.config.ts",
      "src/swagger-config.ts",
      "src/main.ts",
      "src/validation/exception.handler.ts"
    ]
  }
}