{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "modulePathIgnorePatterns": ["<rootDir>/dist/"],
  "coverageDirectory": "./coverage-e2e",
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/**/*.spec.(t|j)s"
  ],
  "coveragePathIgnorePatterns": [
    "src/data/migrations"
  ]
}
