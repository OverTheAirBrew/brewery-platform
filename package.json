{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "start:dev": "turbo start:dev",
    "prune": "turbo prune",
    "generate-docs": "turbo generate-docs",
    "lint": "turbo lint",
    "release": "turbo build && changeset publish",
    "version": "changeset version && pnpm install --lockfile-only",
    "dev": "turbo start:dev",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "turbo": "^1.10.16"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
